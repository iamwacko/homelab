pki:
  ca: /etc/nebula/ca.crt
  cert: /etc/nebula/{{ nebula_name }}.crt
  key: /etc/nebula/{{ nebula_name }}.key
{% if lighthouse == true %}
lighthouse:
  am_lighthouse: true

relay:
  am_relay: true

{% else %}

static_host_map:
  "192.168.100.3": ["104.238.153.121:4242"]

lighthouse:
  hosts:
    - "192.168.100.3"

relay:
  use_relays: true
  relays:
    - 192.168.100.3

punchy:
  punch: true
{% endif %}

listen:
  host: 0.0.0.0
  port: 4242

firewall:
  outbound:
    - port: any
      proto: any
      host: any
  inbound:
    - port: any
      proto: any
      host: any
